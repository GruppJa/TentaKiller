<Page x:Class="TentaKiller.Views.ExamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Exam Page">

    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="16">Exam</TextBlock>

        <TextBlock Text="{Binding Id}"></TextBlock>
        <TextBlock Text="{Binding Name}"></TextBlock>

        <TextBlock HorizontalAlignment="Center" FontSize="12">Challanges</TextBlock>

        <ListBox Name="challangeList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Question}"></TextBlock>
                        <TextBlock> </TextBlock>
                        <TextBlock Text="{Binding Id}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal">
            <Button Click="AddNewChallange">New Challange</Button>
            <Button Click="RemoveExam">Remove Exam</Button>
        </StackPanel>
    </StackPanel>
</Page>
